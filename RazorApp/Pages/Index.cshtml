@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            text-align: center;
        }

        .navbar {
            background-color: green;
        }

        .navbar-brand {
            color: #fff;
            font-size: 1.5em;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-nav .nav-link:hover {
            color: #cce5ff;
        }

        .container {
            padding: 50px;
        }

        h1 {
            font-size: 3em;
            color: #007bff;
        }

        p {
            font-size: 1.2em;
        }

        .logo {
            max-width: 200px;
            margin-bottom: 20px;
            /* Добавляем анимацию */
            animation: spin 2s linear infinite;
        }

        /* Определение анимации */
        @Component spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="#">Your Website</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.nuget.org/">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://yandex.ru/search/?text=sabaki&clid=2411726&lr=10318">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.instagram.com/mumtoz_l7/">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <!-- Изображение с внешнего сайта -->
    <img src="images\2cdda660826ea9f534e4886ce95cd24c.jpg" alt="Logo" class="logo">
    <h1>Maruf</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Скрипт для изменения цвета заголовка -->
<script>
    setInterval(function() {
        document.querySelector('h1').style.color = getRandomColor();
    }, 2000);

    function getRandomColor() {
        var letters = '0123456789ABCDEF';
        var color = '#';
        for (var i = 0; i < 6; i++) {
            color += letters[Math.floor(Math.random() * 16)];
        }
        return color;
    }
</script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
